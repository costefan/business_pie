

<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="box">
        <div class="col-lg-12 text-center">
            <!-- Controls -->
          <h2 class="brand-before">
            <small>
              Please fill the field to create request type
            </small>
          </h2>
          <hr class="tagline-divider">
        </div>
      </div>
    </div>
    <div class="row">
      <div class="form-box col-md-4  col-md-offset-3 ">
        <%= form_for(@request_type,class:"form-horizontal") do |f|  %>
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name,class: "form-control",placeholder: "Name" %>
            </div>

            <div class="form-group">
              <%= f.label :keywords %>
              <textarea id="request_type_keywords" name="request_type[keyword]" cols="60" rows="12"></textarea>
            </div>
            <div class="form-group">
              <%= f.label :positive_verbs %>
              <textarea id="request_type_positive_verbs" name="request_type[positive_verb]" cols="60" rows="12"></textarea>
            </div>
            <div class="form-group">
              <%= f.label :negative_verbs %>
              <textarea id="request_type_negative_verbs" name="request_type[negative_verb]" cols="60" rows="12"></textarea>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <%= f.submit "Create", class: "btn btn-primary" %>
                </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
