<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="box">
        <div class="col-lg-12 text-center">
            <!-- Controls -->

          
          <h2 class="brand-before">
            <small>
              Please select area on the map and type of search
            
            </small>
          </h2>
          <hr class="tagline-divider">
        </div>
      </div>
    </div>
    <p> </p>

  <%= form_tag('/promocodes') do %>
      <%= label_tag 'Count' %>
      <%= number_field_tag :count, 0, min: 0 %>
      <%= radio_button_tag(:service_type, :check_request, true) %>
      <%= label_tag(:check_requests, "Check request") %>
      <%= radio_button_tag(:service_type, :search_request) %>
      <%= label_tag(:search_requests, "Search request") %>
      <div class="form-group">
        <%= collection_select(:user_id, :id, User.all, :id, :email) %>
      </div>

      <div class="form-group">
          <div class="col-md-4">
              <%= submit_tag "Create", class: "btn btn-primary" %>
          </div>
      </div> 
  <% end %>
  </div>
</div>